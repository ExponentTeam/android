<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#3aa987" />
            <gradient android:angle="270" android:startColor="#3aa987" android:endColor="#6de8c9" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#3aa987" />
            <gradient android:angle="270" android:startColor="#3aa987" android:endColor="#6de8c9" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#3aa987" />
            <gradient android:angle="270" android:startColor="#3aa987" android:endColor="#3aa987" />
        </shape>
    </item>
</selector>